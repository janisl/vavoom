class SoundWind : Actor
	__mobjinfo__(42);

//==========================================================================
//
//  A_ESound
//
//==========================================================================

void A_ESound()
{
	PlaySound('world/wind', CHAN_VOICE);
}

__states__
{
	S_SND_WIND('AMG1', 0, 100.0 / 35.0, S_SND_WIND) { A_ESound(); }
}

defaultproperties
{
	Health = 1000;
	Radius = 20.0;
	Height = 16.0;
	Mass = 100.0;
	ReactionCount = 8;
	bHidden = true;
	bNoBlockmap = true;
	bNoPassMobj = true;
	IdleState = S_SND_WIND;
}

