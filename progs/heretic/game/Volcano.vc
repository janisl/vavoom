class Volcano : Actor
	__mobjinfo__(87)
	__scriptid__(150);

//==========================================================================
//
//  A_VolcanoSet
//
//==========================================================================

final void A_VolcanoSet()
{
	StateTime = 3.0 + Random() * 3.5;
}

//==========================================================================
//
//  A_VolcanoBlast
//
//==========================================================================

final void A_VolcanoBlast()
{
	int i;
	int count;
	Actor blast;
	float angle;

	count = 1 + (P_Random() % 3);
	for (i = 0; i < count; i++)
	{
		blast = Spawn(VolcanoBlast, Origin + vector(0.0, 0.0, 44.0));
		blast.Target = self;
		angle = Random() * 360.0;
		blast.Angles.yaw = angle;
		blast.Velocity.x = cos(angle) * 35.0;
		blast.Velocity.y = sin(angle) * 35.0;
		blast.Velocity.z = (2.5 + Random() * 4.0) * 35.0;
		blast.PlaySound('world/volcano/shoot', CHAN_VOICE);
		blast.CheckMissileSpawn();
	}
}

states
{
Spawn:
	VLCO A 350
	VLCO A 35 A_VolcanoSet
	VLCO BCDBCD 3
	VLCO E 10 A_VolcanoBlast
	Goto Spawn+1
}

defaultproperties
{
	Radius = 12.0;
	Height = 20.0;
	bSolid = true;
}
