class HereticImpBall : Projectile
	__scriptid__(10);

//==========================================================================
//
//  OnMapSpawn
//
//==========================================================================

void OnMapSpawn(mthing_t* mthing)
{
	::OnMapSpawn(mthing);
	if (Level.Game.fastparm)
		Speed = 700.0;
}

__states__
{
	S_IMPFX1('FX10', 0 | FF_FULLBRIGHT, 6.0 / 35.0, S_IMPFX2) = none
	S_IMPFX2('FX10', 1 | FF_FULLBRIGHT, 6.0 / 35.0, S_IMPFX3) = none
	S_IMPFX3('FX10', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_IMPFX1) = none
	S_IMPFXI1('FX10', 3 | FF_FULLBRIGHT, 5.0 / 35.0, S_IMPFXI2) = none
	S_IMPFXI2('FX10', 4 | FF_FULLBRIGHT, 5.0 / 35.0, S_IMPFXI3) = none
	S_IMPFXI3('FX10', 5 | FF_FULLBRIGHT, 5.0 / 35.0, S_IMPFXI4) = none
	S_IMPFXI4('FX10', 6 | FF_FULLBRIGHT, 5.0 / 35.0, none) = none
}

defaultproperties
{
	Radius = 8.0;
	Height = 8.0;
	Speed = 350.0;
	MissileDamage = 1;
	bWindThrust = true;
	IdleState = S_IMPFX1;
	DeathState = S_IMPFXI1;
	DLightColour = RGB(213, 118, 4);
	DLightRadius = 200.0;
}
