class HereticImpBall : Projectile
	__scriptid__(10);

//==========================================================================
//
//  OnMapSpawn
//
//==========================================================================

void OnMapSpawn(mthing_t* mthing)
{
	::OnMapSpawn(mthing);
	if (Level.Game.fastparm)
		Speed = 700.0;
}

states
{
Spawn:
	FX10 ABC 6 Bright
	Loop
Death:
	FX10 DEFG 5 Bright
	Stop
}

defaultproperties
{
	Radius = 8.0;
	Height = 8.0;
	Speed = 350.0;
	MissileDamage = 1;
	bWindThrust = true;
	DLightColour = RGB(213, 118, 4);
	DLightRadius = 200.0;
}
