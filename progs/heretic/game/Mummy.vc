class Mummy : Pawn
	__mobjinfo__(68)
	__scriptid__(4);

//==========================================================================
//
//	NoBlockingSet
//
//==========================================================================

void NoBlockingSet()
{
	DropItem(GoldWandAmmo, 3, 0.328125);
}

//==========================================================================
//
//  A_MummyAttack
//
//==========================================================================

final void A_MummyAttack()
{
	if (!Target)
	{
		return;
	}
	PlaySound(AttackSound, CHAN_WEAPON);
	if (CheckMeleeRange())
	{
		Target.Damage(self, self, HITDICE(2));
		PlaySound('mummy/attack2', CHAN_WEAPON);
		return;
	}
	PlaySound('mummy/attack1', CHAN_WEAPON);
}

//==========================================================================
//
//  A_MummySoul
//
//==========================================================================

final void A_MummySoul()
{
	Actor mo;

	mo = Spawn(MummySoul, Origin + vector(0.0, 0.0, 10.0));
	mo.Velocity.z = 1.0 * 35.0;
}

states
{
Spawn:
	MUMM AB 10 A_Look
	Loop
See:
	MUMM ABCD 4 A_Chase
	Loop
Melee:
	MUMM E 6 A_FaceTarget
	MUMM F 6 A_MummyAttack
	MUMM G 6 A_FaceTarget
	Goto See
Pain:
	MUMM H 4
	MUMM H 4 A_Pain
	Goto See
Death:
	MUMM I 5
	MUMM J 5 A_Scream
	MUMM K 5 A_MummySoul
	MUMM L 5
	MUMM M 5 A_NoBlocking
	MUMM NO 5
	MUMM P -1
	Stop
}

defaultproperties
{
	Health = 80;
	Radius = 22.0;
	Height = 62.0;
	Mass = 75.0;
	StepSpeed = 12.0;
	PainChance = 0.5;
	SightSound = 'mummy/sight';
	ActiveSound = 'mummy/active';
	AttackSound = 'mummy/attack1';
	PainSound = 'mummy/pain';
	DeathSound = 'mummy/death';
}
