class Mummy : Pawn
	__mobjinfo__(68)
	__scriptid__(4);

//==========================================================================
//
//	DropStuff
//
//==========================================================================

void DropStuff()
{
	DropItem(GoldWandAmmo, 3, 0.328125);
}

//==========================================================================
//
//  A_MummyAttack
//
//==========================================================================

final void A_MummyAttack()
{
	if (!Target)
	{
		return;
	}
	PlaySound(AttackSound, CHAN_WEAPON);
	if (CheckMeleeRange())
	{
		Target.Damage(self, self, HITDICE(2));
		PlaySound('mummy/attack2', CHAN_WEAPON);
		return;
	}
	PlaySound('mummy/attack1', CHAN_WEAPON);
}

//==========================================================================
//
//  A_MummySoul
//
//==========================================================================

final void A_MummySoul()
{
	Actor mo;

	mo = Spawn(MummySoul, Origin + vector(0.0, 0.0, 10.0));
	mo.Velocity.z = 1.0 * 35.0;
}

