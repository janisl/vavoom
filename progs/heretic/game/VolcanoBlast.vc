class VolcanoBlast : Projectile
	__scriptid__(123);

//==========================================================================
//
//  A_BeastPuff
//
//==========================================================================

final void A_BeastPuff()
{
	TVec org;

	if (P_Random() > 64)
	{
		org.x = Origin.x + (Random() - Random()) * 4.0;
		org.y = Origin.y + (Random() - Random()) * 4.0;
		org.z = Origin.z + (Random() - Random()) * 4.0;
		Spawn(Puffy, org);
	}
}

//==========================================================================
//
//  A_VolcBallImpact
//
//==========================================================================

final void A_VolcBallImpact()
{
	int i;
	Actor tiny;
	float angle;

	if (Origin.z <= FloorZ)
	{
		bNoGravity = true;
		Gravity = 1.0;
		Origin.z += 28.0;
	}
	RadiusAttack(Target, 25, 25.0, true);
	for (i = 0; i < 4; i++)
	{
		tiny = Spawn(VolcanoTBlast, Origin);
		tiny.Target = self;
		angle = itof(i) * 90.0;
		tiny.Angles.yaw = angle;
		tiny.Velocity.x = 0.7 * cos(angle) * 35.0;
		tiny.Velocity.y = 0.7 * sin(angle) * 35.0;
		tiny.Velocity.z = (1.0 + Random() * 2.0) * 35.0;
		tiny.CheckMissileSpawn();
	}
}

__states__
{
	S_VOLCANOBALL1('VFBL', 0, 4.0 / 35.0, S_VOLCANOBALL2) = A_BeastPuff
	S_VOLCANOBALL2('VFBL', 1, 4.0 / 35.0, S_VOLCANOBALL1) = A_BeastPuff
	S_VOLCANOBALLX1('XPL1', 0, 4.0 / 35.0, S_VOLCANOBALLX2) = A_VolcBallImpact
	S_VOLCANOBALLX2('XPL1', 1, 4.0 / 35.0, S_VOLCANOBALLX3) = none
	S_VOLCANOBALLX3('XPL1', 2, 4.0 / 35.0, S_VOLCANOBALLX4) = none
	S_VOLCANOBALLX4('XPL1', 3, 4.0 / 35.0, S_VOLCANOBALLX5) = none
	S_VOLCANOBALLX5('XPL1', 4, 4.0 / 35.0, S_VOLCANOBALLX6) = none
	S_VOLCANOBALLX6('XPL1', 5, 4.0 / 35.0, none) = none
}

defaultproperties
{
	Radius = 8.0;
	Height = 8.0;
	Speed = 70.0;
	Gravity = 0.125;
	MissileDamage = 2;
	DamageType = 'Fire';
	bNoGravity = false;
	IdleState = S_VOLCANOBALL1;
	DeathState = S_VOLCANOBALLX1;
	DeathSound = 'world/volcano/blast';
	Effects = HereticDefs::EF_DL_RED;
}
