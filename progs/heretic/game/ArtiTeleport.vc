{
	S_ARTI_ATLP1('ATLP', 0, 4.0 / 35.0, S_ARTI_ATLP2) = none
	S_ARTI_ATLP2('ATLP', 1, 4.0 / 35.0, S_ARTI_ATLP3) = none
	S_ARTI_ATLP3('ATLP', 2, 4.0 / 35.0, S_ARTI_ATLP4) = none
	S_ARTI_ATLP4('ATLP', 1, 4.0 / 35.0, S_ARTI_ATLP1) = none
