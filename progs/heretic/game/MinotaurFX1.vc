class MinotaurFX1 : Projectile;

//==========================================================================
//
//  OnMapSpawn
//
//==========================================================================

void OnMapSpawn(mthing_t* mthing)
{
	::OnMapSpawn(mthing);
	if (Level.Game.fastparm)
		Speed = 910.0;
}

states
{
Spawn:
	FX12 AB 6 Bright
	Loop
Death:
	FX12 CDEFGH 5 Bright
	Stop
}

defaultproperties
{
	Radius = 10.0;
	Height = 6.0;
	Speed = 700.0;
	MissileDamage = 3;
	RenderStyle = STYLE_Add;
	DamageType = 'Fire';
	bLeaveTrail = true;
	bDynamicLight = true;
	DLightColour = RGB(255, 128, 0);
	DLightRadius = 126.0;
}
