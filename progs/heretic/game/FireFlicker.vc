class FireFlicker : SectorThinker;

float time;
int maxlight;
int minlight;

//==========================================================================
//
//	Tick
//
//==========================================================================

void Tick(float deltaTime)
{
	int amount;

	time -= deltaTime;
	if (time > 0.0)
	{
		return;
	}

	amount = (P_Random() & 3) * 16;

	if (Sector->params.lightlevel - amount < minlight)
		Sector->params.lightlevel = minlight;
	else
		Sector->params.lightlevel = maxlight - amount;

	time = 4.0 / 35.0;
}

defaultproperties
{
}

