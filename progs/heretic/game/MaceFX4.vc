	}
	else if (victim.bIsPlayer)
	{
		// Player specific checks
		if (victim.bInvulnerable)
		{
			// Can't hurt invulnerable players
		}
		else if (PlayerPawn(victim).AutoUseChaosDevice())
		{
			// Player was saved using chaos device
			return -1;
		}
		else
