// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

// FUNCTION PROTOTYPES -----------------------------------------------------

// DATA DECLARATIONS -------------------------------------------------------

// demo loop control
int demosequence = -1;	// -1 = don't play demos

float pagetime;
int page_pic;
int advisor_pic;

// CODE --------------------------------------------------------------------

//==========================================================================
//
//  AdvanceDemo
//
//  This cycles through the demo sequences.
//
//==========================================================================

void AdvanceDemo(void)
{
	demosequence++;
	demosequence %= 6;

	switch (demosequence)
	{
	case 0:
		pagetime = 10.0;
		page_pic = R_RegisterPic("TITLE", PIC_RAW);
//      S_StartSong("MUS_TITL", P_GetCDTitleTrack(), false);
		CmdBuf_AddText("music play MUS_TITL\n");
		break;

	case 1:
		advisor_pic = R_RegisterPic("ADVISOR", PIC_PATCH);
		CmdBuf_AddText("PlayDemo demo1\n");
		break;

	case 2:
		pagetime = 200.0 / 35.0;
		page_pic = R_RegisterPic("CREDIT", PIC_RAW);
		break;

	case 3:
		CmdBuf_AddText("PlayDemo demo2\n");
		break;

	case 4:
		pagetime = 200.0 / 35.0;
		if (shareware)
		{
			page_pic = R_RegisterPic("ORDER", PIC_RAW);
		}
		else
		{
			page_pic = R_RegisterPic("CREDIT", PIC_RAW);
		}
		break;

	case 5:
		CmdBuf_AddText("PlayDemo demo3\n");
		break;
	}
}

//==========================================================================
//
//  ForceTitle
//
//==========================================================================

void ForceTitle(void)
{
	pagetime = 10.0;
	page_pic = R_RegisterPic("TITLE", PIC_RAW);
}

//==========================================================================
//
//  PageDrawer
//
//==========================================================================

void PageDrawer(void)
{
	pagetime -= frametime;
	if (demosequence == -1 || (!MN_Active() && pagetime < 0.0))
	{
		AdvanceDemo();
	}

	R_DrawPic(0, 0, page_pic);
	if (demosequence == 1)
	{
		R_DrawPic(4, 160, advisor_pic);
	}
}

//==========================================================================
//
//  OnHostEndGame
//
//==========================================================================

void OnHostEndGame(void)
{
	if (demosequence != -1)
		AdvanceDemo();
	ForceTitle();
}

//==========================================================================
//
//  OnHostError
//
//==========================================================================

void OnHostError(void)
{
	demosequence = -1;
	ForceTitle();
}

//==========================================================================
//
//  StopDemoLoop
//
//==========================================================================

void StopDemoLoop(void)
{
	demosequence = -1;	// not in the demo loop now
}

