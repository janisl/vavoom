class MenuChoice_BitDepth : MenuChoiceEnum;

int depths[4];

int GetInitialValue()
{
	int b;
	int bi;

	b = GetCvar('screen_bpp');

	for (bi = 0; bi < 4; bi++)
	{
		if (depths[bi] == b)
		{
			break;
		}
	}
	if (bi == 4)
	{
		bi = 0;
	}
	return bi;
}

int GetDepth()
{
	return depths[Value];
}

defaultproperties
{
	Text = "Bit depth";
	EnumNames[0] = "8";
	EnumNames[1] = "16";
	EnumNames[2] = "24";
	EnumNames[3] = "32";
	depths[0] = 8;
	depths[1] = 16;
	depths[2] = 24;
	depths[3] = 32;
}

