class MenuSelector_BigArrow : MenuObject;

int selector_pics[2];
float Time;

void InitWindow()
{
	::InitWindow();
	bTickEnabled = true;
	Disable();
	selector_pics[0] = R_RegisterPic('m_slctr1');
	selector_pics[1] = R_RegisterPic('m_slctr2');
}

void DrawWindow()
{
	DrawPic(0, 0, selector_pics[ftoi(Time * 2.0) & 1]);
}

void SetPos(int X, int Y)
{
	::SetPos(X - 28, Y - 1);
}

