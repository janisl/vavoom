class MenuSelector_BigArrow : MenuObject;

int selector_pics[2];
float Time;

void InitWindow()
{
	::InitWindow();
	bTickEnabled = true;
	Disable();
	selector_pics[0] = R_RegisterPic('m_slctr1', PIC_PATCH);
	selector_pics[1] = R_RegisterPic('m_slctr2', PIC_PATCH);
}

void DrawWindow(GC gc)
{
	gc.DrawIcon(-28, -1, selector_pics[ftoi(Time * 2.0) & 1]);
}

defaultproperties
{
}

