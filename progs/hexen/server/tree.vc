//============================================================================
//
//  Actor::A_LeafSpawn
//
//============================================================================

void Actor::A_LeafSpawn(void)
{
	Actor A;
	int i;

	for (i = (P_Random() & 3) + 1; i; i--)
	{
		A = Spawn(P_Random() & 1 ? Leaf2 : Leaf1, Origin + vector(
			(Random() - Random()) * 64.0,
			(Random() - Random()) * 64.0,
			Random() * 64.0));
		if (A)
		{
			A.Thrust(Angles.yaw, Random() * 2.0 + 3.0);
			A.Owner = self;
			A._Special1 = 0;
		}
	}
}

//============================================================================
//
//  Actor::A_LeafThrust
//
//============================================================================

void Actor::A_LeafThrust(void)
{
	if (P_Random() > 96)
	{
		return;
	}
	Velocity.z += (Random() * 2.0 + 1.0) * 35.0;
}

//============================================================================
//
//  Actor::A_LeafCheck
//
//============================================================================

void Actor::A_LeafCheck(void)
{
	_Special1++;
	if (_Special1 >= 20)
	{
		SetState(S_NULL);
		return;
	}
	if (P_Random() > 64)
	{
		if (!Velocity.x && !Velocity.y)
		{
			Thrust(Owner.Angles.yaw, Random() * 2.0 + 1.0);
		}
		return;
	}
	SetState(S_LEAF1_8);
	Velocity.z = (Random() * 2.0 + 1.0) * 35.0;
	Thrust(Owner.Angles.yaw, Random() * 2.0 + 2.0);
	bMissile = true;
}

//===========================================================================
//
//  Actor::A_TreeDeath
//
//===========================================================================

void Actor::A_TreeDeath(void)
{
	if (!bFireDamage)
	{
		Height *= 4.0;
		bShootable = true;
		bDropOff = false;
		bCorpse = false;
		Health = 35;
		return;
	}
	else
	{
		SetState(MeleeState);
	}
}

