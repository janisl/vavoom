//**************************************************************************
//
//	BridgeBall
//
// New bridge stuff
//
//  Parent
//      _Special1    true == removing from world
//
//  Child
//      Instigator  pointer to center mobj
//
//**************************************************************************

class BridgeBall:Effect
{

float OrbitAngle;		// Angle of ball

//==========================================================================
//
//  A_BridgeOrbit
//
//==========================================================================

void A_BridgeOrbit(void)
{
	if (Instigator._Special1)
	{
		SetState(S_NULL);
	}
	//	3.0 * 360.0 / 256.0 = 4.21875
	OrbitAngle = AngleMod360(OrbitAngle + 4.21875);
	Origin.x = Instigator.Origin.x + 15.0 * cos(OrbitAngle);
	Origin.y = Instigator.Origin.y + 15.0 * sin(OrbitAngle);
	Origin.z = Instigator.Origin.z;
}

__states__
{
	S_BBALL1('TLGL', 0, 2.0 / 35.0, S_BBALL2) { }
	S_BBALL2('TLGL', 0, 5.0 / 35.0, S_BBALL2) { A_BridgeOrbit(); }
}

defaultproperties
{
	bNoTeleport = true;
	IdleState = S_BBALL1;
}

}

//**************************************************************************
//
//	Bridge
//
//**************************************************************************

class Bridge:Actor
	__mobjinfo__(118)
{

//==========================================================================
//
//  A_BridgeInit
//
//==========================================================================

void A_BridgeInit(void)
{
	float StartAngle;
	BridgeBall ball1;
	BridgeBall ball2;
	BridgeBall ball3;

	StartAngle = Random() * 360.0;
	_Special1 = 0;

	// Spawn triad into world
	ball1 = BridgeBall(Spawn(BridgeBall, Origin));
	ball1.OrbitAngle = StartAngle;
	ball1.Instigator = self;

	ball2 = BridgeBall(Spawn(BridgeBall, Origin));
	ball2.OrbitAngle = AngleMod360(StartAngle + 120.0);
	ball2.Instigator = self;

	ball3 = BridgeBall(Spawn(BridgeBall, Origin));
	ball3.OrbitAngle = AngleMod360(StartAngle + 240.0);
	ball3.Instigator = self;

	ball1.A_BridgeOrbit();
	ball2.A_BridgeOrbit();
	ball3.A_BridgeOrbit();
}

__states__
{
	S_BRIDGE1('TLGL', 0, 2.0 / 35.0, S_BRIDGE2) { }
	S_BRIDGE2('TLGL', 0, 2.0 / 35.0, S_BRIDGE3) { A_BridgeInit(); }
	S_BRIDGE3('TLGL', 0, -1.0, S_NULL) { }
	S_FREE_BRIDGE1('TLGL', 0, 2.0 / 35.0, S_FREE_BRIDGE2) { }
	S_FREE_BRIDGE2('TLGL', 0, 300.0 / 35.0, S_NULL) { }
}

//==========================================================================
//
//  RemoveThing
//
//==========================================================================

void RemoveThing(void)
{
	_Special1 = true;	// Removing the bridge
	bSolid = false;
	SetState(S_FREE_BRIDGE1);
}

defaultproperties
{
	Health = 1000;
	Radius = 32.0;
	Height = 2.0;
	Mass = 100.0;
	Translucency = 100;
	bSolid = true;
	bNoGravity = true;
	bNoPassMobj = true;
	IdleState = S_BRIDGE1;
}

}

