// MACROS ------------------------------------------------------------------

// CONSTANTS ---------------------------------------------------------------

// TYPES -------------------------------------------------------------------

// FUNCTION PROTOTYPES -----------------------------------------------------

// DATA DECLARATIONS -------------------------------------------------------

TitleScreen		GTitle;

// CODE --------------------------------------------------------------------

//==========================================================================
//
//  CL_RootWindowCreated
//
//==========================================================================

void CL_RootWindowCreated()
{
	GTitle = TitleScreen(GRoot.NewChild(TitleScreen));
}

//==========================================================================
//
//  CL_Connected
//
//==========================================================================

void CL_Connected()
{
	GTitle.Hide();
	GTitle.StopDemoLoop();
}

//==========================================================================
//
//  CL_Disconnected
//
//==========================================================================

void CL_Disconnected()
{
	GTitle.Show();
}

//==========================================================================
//
//  CL_DemoPlaybackStarted
//
//==========================================================================

void CL_DemoPlaybackStarted()
{
	GTitle.Hide();
}

//==========================================================================
//
//  CL_DemoPlaybackStopped
//
//==========================================================================

void CL_DemoPlaybackStopped()
{
	GTitle.Show();
}

//==========================================================================
//
//  OnHostEndGame
//
//==========================================================================

void OnHostEndGame()
{
	GTitle.OnHostEndGame();
}

//==========================================================================
//
//  OnHostError
//
//==========================================================================

void OnHostError()
{
	GTitle.OnHostError();
}

//==========================================================================
//
//  main
//
//==========================================================================

void main()
{
}

