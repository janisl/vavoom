	S_LIGHTNING_F_X1('MLF2', 5 | FF_FULLBRIGHT, 2.0 / 35.0, S_LIGHTNING_F_X2) { A_LightningRemove(); }
	S_LIGHTNING_F_X2('MLF2', 6 | FF_FULLBRIGHT, 3.0 / 35.0, S_LIGHTNING_F_X3) { }
