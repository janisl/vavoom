class Mana : Pickup
	abstract;

int ManaType;
int ManaCount;

//==========================================================================
//
//  TouchSpecial
//
//==========================================================================

void TouchSpecial(Actor Toucher)
{
	if (!Toucher.bPickUp)
	{
		// Can't be picked up by toucher
		return;
	}
	if (Toucher.Health <= 0)
	{
		// Toucher is dead
		return;
	}
	if (!Player(Toucher.Player).GiveMana(ManaType, ManaCount))
	{
		return;
	}
	cprint(Toucher.Player, MainGameInfo(Level.Game).manaText[ManaType]);
	if (Special)
	{
		Level.ExecuteActionSpecial(Special, Args[0], Args[1], Args[2], Args[3],
			Args[4], NULL, 0, Toucher);
		Special = 0;
	}
	if (Level.Game.deathmatch && !bDropped)
	{
		HideSpecial();
	}
	else
	{
		Remove();
	}
	Player(Toucher.Player).BonusFlash += BONUSADD;
	Toucher.PlaySound('PickupItem', CHAN_ITEM);
}

defaultproperties
{
	Health = 10;
	Radius = 8.0;
	bFloatBob = true;
}

