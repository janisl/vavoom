class Mana : Ammo
	abstract;

int ManaType;

//==========================================================================
//
//  TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	if (Player(Toucher.Player).GiveMana(MainGameInfo(Level.Game).ManaClasses[ManaType], Amount))
	{
		GoAwayAndDie();
		return true;
	}
	return false;
}

defaultproperties
{
	Health = 10;
	Radius = 8.0;
	Height = 32.0;
	MaxAmount = 200;
	bSpecial = true;
	bNoPassMobj = true;
	bFloatBob = true;
}
