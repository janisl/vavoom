//
//  FireWeapon
//
//==========================================================================

void FireWeapon()
{
	if (!CheckMana())
	{
		return;
	}
	MO.SetState(MO.MissileState);
	ViewEnts[ps_weapon].SetState(
		Weapon(ViewEnts[ps_weapon]).GetAttackState());
	NoiseAlert(MO, MO);
}

