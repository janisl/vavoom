//==========================================================================
//
//  SetupPsprites
//
//  Called at start of level for each player
//
//==========================================================================

void SetupPsprites()
{
	int i;

	// Remove all psprites
	for (i = 0; i < NUMPSPRITES; i++)
	{
		ViewEnts[i].StateNum = 0;
	}
	// Spawn the ready weapon
	BringUpWeapon();
}

//==========================================================================
//
//  MovePsprites
//
//  Called every tic by player thinking routine
//
//==========================================================================

void MovePsprites()
{
	int i;
	ViewEntity e;

	for (i = 0; i < NUMPSPRITES; i++)
	{
		e = ViewEnts[i];
		if (e.StateNum)	// a null state means not active
		{
			// drop tic count and possibly change state
			if (e.StateTime != -1.0)	// a -1 tic count never changes
			{
				e.StateTime -= frametime;
				if (e.StateTime <= 0.0)
				{
					e.StateTime = 0.0;
					e.SetState(e.NextState);
				}
			}
		}
	}
	ViewEnts[ps_flash].SX = ViewEnts[ps_weapon].SX;
	ViewEnts[ps_flash].SY = ViewEnts[ps_weapon].SY;
}

//==========================================================================
//
//  CheckMana
//
//  Returns true if there is enough mana to shoot.  If not, selects the
// next weapon to use.
//
//==========================================================================

bool CheckMana()
{
	int mana;
	int count;

	mana = Weapon(ViewEnts[ps_weapon]).Mana;
	count = WeaponManaUse(PClass, ReadyWeapon);
	if (mana == MANA_BOTH)
	{
		if (Mana[MANA_1] >= count && Mana[MANA_2] >= count)
		{
			return true;
		}
	}
	else if (mana == MANA_NONE || Mana[mana] >= count)
	{
		return true;
	}
	// out of mana, pick a weapon to change to
	do
	{
		if (WeaponOwned[WP_THIRD] &&
			Mana[MANA_2] >= WeaponManaUse(PClass, WP_THIRD))
		{
			PendingWeapon = WP_THIRD;
		}
		else if (WeaponOwned[WP_SECOND] &&
			Mana[MANA_1] >= WeaponManaUse(PClass, WP_SECOND))
		{
			PendingWeapon = WP_SECOND;
		}
		else if (WeaponOwned[WP_FOURTH] &&
			Mana[MANA_1] >= WeaponManaUse(PClass, WP_FOURTH) &&
			Mana[MANA_2] >= WeaponManaUse(PClass, WP_FOURTH))
		{
			PendingWeapon = WP_FOURTH;
		}
		else
		{
			PendingWeapon = WP_FIRST;
		}
	}
	while (PendingWeapon == wp_nochange);
	SetPsprite(ps_weapon, Weapon(ViewEnts[ps_weapon]).GetDownState());
	return false;
}

