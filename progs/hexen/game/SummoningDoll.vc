class SummoningDoll : Projectile;

const float MAULATORTIME 	= 25.0;

//==========================================================================
//
//  A_Summon
//
//  Summon Minotaur
//
//==========================================================================

final void A_Summon()
{
	EntityEx A;

	A = Spawn(MinotaurFriend, Origin);
	if (A)
	{
		if (!A.TestLocation() || !Target)
		{
			// Didn't fit - change back to artifact
			A.SetState(none);
			A = Spawn(ArtiDarkServant, Origin);
			if (A)
				A.bDropped = true;
			return;
		}

		MinotaurFriend(A).StartTime = XLevel.Time;
		if (!Target.bCorpse)
		{
			//	Master isn't dead
			A.Tracer = Target;	// Pointer to master
			Powerup Power = Spawn(PowerMinotaur,,,, false);
			Power.EffectTime = MAULATORTIME;
			Power.bAlwaysPickup = true;
			if (!Power.TryPickup(Target))
			{
				Power.Destroy();
			}
		}

		// Make smoke puff
		Spawn(MinotaurSmoke, Origin);
		PlaySound('MaulatorActive', CHAN_VOICE);
	}
}

states
{
Spawn:
	SUMN A 4
	Loop
Death:
	SUMN AA 4
	SUMN A 4 A_Summon
	Stop
}

defaultproperties
{
	Speed = 700.0;
	bNoGravity = false;
	bActivateImpact = false;
	bActivatePCross = false;
}
