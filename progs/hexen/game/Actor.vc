//
//	SpawnBlasterEffects
//
//===========================================================================

void SpawnBlasterEffects()
{
	float z;
	Actor A;

	if (Class == MageWandMissile)
	{
		if (P_Random() < 128)
		{
			z = Origin.z - 8.0;
			if (z < FloorZ)
			{
				z = FloorZ;
			}
			Spawn(MageWandSmoke, vector(Origin.x, Origin.y, z));
		}
	}
	else
	{
		if (!--_Special1)
		{
			_Special1 = 4;
			z = Origin.z - 12.0;
			if (z < FloorZ)
			{
				z = FloorZ;
			}
			A = Spawn(CFlameFloor, vector(Origin.x, Origin.y, z));
			if (A)
			{
				A.Angles.yaw = Angles.yaw;
			}
		}
	}
}

