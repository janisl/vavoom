//==========================================================================
//
//  PIT_RadiusAttack
//
//  "bombsource" is the creature that caused the explosion at "bombspot".
//
//==========================================================================

bool PIT_RadiusAttack(Entity Other)
{
	float dist;
	int damage;

	if (!Actor(Other).bShootable)
	{
		return true;
	}
//  if (Other.Flags2 & MF2_BOSS)
//  {
//		// Bosses take no damage from PIT_RadiusAttack
//      return true;
//  }
	if (!DamageSource && Other == Instigator)
	{
		// don't damage the source of the explosion
		return true;
	}
#if 0
	if (abs(ftoi(Other.Origin.z - Origin.z)) > 2 * bombdistance)
	{
		// too high/low
		return true;
	}
#endif
	dist = Length(MobjCenter(Other) - MobjCenter(self)) - Other.Radius;
	if (dist < 0.0)
	{
		dist = 0.0;
	}
	if (dist >= bombdistance)
	{
		// Out of range
		return true;
	}
	if (Other.CanSee(self))
	{
		// OK to damage, target is in direct path
		damage = (bombdamage * ftoi(bombdistance - dist) /
			ftoi(bombdistance)) + 1;
		if (Other.bIsPlayer)
		{
			damage >>= 2;
		}
		Actor(Other).Damage(self, Instigator, damage);
	}
	return true;
}

