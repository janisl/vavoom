//==========================================================================
//
//  A_SerpentCheckForAttack
//
//==========================================================================

void A_SerpentCheckForAttack(void)
{
	if (!Enemy)
	{
		return;
	}
	if (CheckMeleeRange2())
	{
		SetState(WalkState);
	}
	else if (CheckMeleeRange())
	{
		if (P_Random() < 32)
		{
			SetState(WalkState);
		}
		else
		{
			SetState(AttackState);
		}
	}
}

