class ZBlueCandle : Decoration
	__mobjinfo__(8066);

void OnMapSpawn(mthing_t *mthing)
{
	::OnMapSpawn(mthing);
	if (mthing && !TID)
		AddStaticLightRGB(Origin, 128.0, RGB(0, 0, 255));
}

__states__
{
	S_ZBLUE_CANDLE1('CAND', 0 | FF_FULLBRIGHT, 5.0 / 35.0, S_ZBLUE_CANDLE2) { }
	S_ZBLUE_CANDLE2('CAND', 1 | FF_FULLBRIGHT, 5.0 / 35.0, S_ZBLUE_CANDLE3) { }
	S_ZBLUE_CANDLE3('CAND', 2 | FF_FULLBRIGHT, 5.0 / 35.0, S_ZBLUE_CANDLE4) { }
	S_ZBLUE_CANDLE4('CAND', 3 | FF_FULLBRIGHT, 5.0 / 35.0, S_ZBLUE_CANDLE5) { }
	S_ZBLUE_CANDLE5('CAND', 4 | FF_FULLBRIGHT, 5.0 / 35.0, S_ZBLUE_CANDLE1) { }
}

defaultproperties
{
	Radius = 20.0;
	Height = 16.0;
	bNoBlockmap = true;
	IdleState = S_ZBLUE_CANDLE1;
}

