class TelOtherFX2 : TelOtherFX1;

int LifeCount;

//==========================================================================
//
//  A_CheckTeleRing
//
//==========================================================================

final void A_CheckTeleRing()
{
	if (LifeCount-- <= 0)
	{
		SetState(DeathState);
	}
}

states
{
Spawn:
	TRNG BCDCB 4 Bright
	TRNG A 4 Bright A_CheckTeleRing
	Loop
}

defaultproperties
{
	LifeCount = 1;	// Lifetime countdown
	Speed = 560.0;
}
