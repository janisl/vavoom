class ZCandle : Decoration
	__mobjinfo__(119);

void OnMapSpawn(mthing_t *mthing)
{
	::OnMapSpawn(mthing);
	if (mthing)
		Level.AddStaticLight(Origin, 128.0);
}

__states__
{
	S_ZCANDLE1('CNDL', 0 | FF_FULLBRIGHT, 4.0 / 35.0, S_ZCANDLE2) { }
	S_ZCANDLE2('CNDL', 1 | FF_FULLBRIGHT, 4.0 / 35.0, S_ZCANDLE3) { }
	S_ZCANDLE3('CNDL', 2 | FF_FULLBRIGHT, 4.0 / 35.0, S_ZCANDLE1) { }
}

defaultproperties
{
	bNoBlockmap = true;
	bNoGravity = true;
	IdleState = S_ZCANDLE1;
}

