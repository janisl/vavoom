class ClericBoss : ClassBoss
	__mobjinfo__(10101);

//==========================================================================
//
//  A_ClericAttack
//
//  Spawns the spirits
//
//==========================================================================

final void A_ClericAttack()
{
	EntityEx	A;

	if (!Target)
		return;
	A = SpawnMissile(Target, HolyMissile, 40.0);
	if (A)
	{
		A.Tracer = Target;
	}
	PlaySound('HolySymbolFire', CHAN_WEAPON);
}

//==========================================================================
//
//	A_ClericBurnScream
//
//==========================================================================

final void A_ClericBurnScream()
{
	PlaySound('PlayerClericBurnDeath', CHAN_VOICE);
}

states
{
Spawn:
	CLER A 2
	CLER A 3 A_ClassBossHealth
	CLER A 5 A_Look
	Wait
See:
	CLER ABCD 4 A_FastChase
	Loop
Melee:
Missile:
	CLER E 8 A_FaceTarget
	CLER F 8 A_FaceTarget
	CLER G 10 A_ClericAttack
	Goto See
Pain:
	CLER H 4
	CLER H 4 A_Pain
	Goto See
Death:
	CLER I 6
	CLER K 6 A_Scream
	CLER LL 6
	CLER M 6 A_NoBlocking
	CLER NOP 6
	CLER Q -1
	Stop
XDeath:
	CLER R 5 A_Scream
	CLER S 5
	CLER T 5 A_NoBlocking
	CLER UVWXYZ 5
	CLER "[" -1
	Stop
Ice:
	CLER "\\" 5 A_FreezeDeath
	CLER "\\" 1 A_FreezeDeathChunks
	Wait
Burn:
	FDTH C 5 Bright A_ClericBurnScream
	FDTH D 4 Bright
	FDTH G 5 Bright
	FDTH H 4 Bright A_Scream
	FDTH I 5 Bright
	FDTH J 4 Bright
	FDTH K 5 Bright
	FDTH L 4 Bright
	FDTH M 5 Bright
	FDTH N 4 Bright
	FDTH O 5 Bright
	FDTH P 4 Bright
	FDTH Q 5 Bright
	FDTH R 4 Bright
	FDTH S 5 Bright A_NoBlocking
	FDTH T 4 Bright
	FDTH U 5 Bright
	FDTH V 4 Bright
	ACLO E 35 A_CheckBurnGone
	Wait
BurnGone:
	ACLO E 8
	Stop
}

defaultproperties
{
	Health = 800;
	GibsHealth = -400;
	Radius = 16.0;
	Height = 64.0;
	Mass = 100.0;
	Speed = 25.0 * 35.0;
	PainChance = 0.1953125;
	PainSound = 'PlayerClericPain';
	DeathSound = 'PlayerClericCrazyDeath';
	Obituary = "$ob_cboss";
}
