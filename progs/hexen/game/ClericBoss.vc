class ClericBoss : ClassBoss
	__mobjinfo__(10101);

//============================================================================
//
//  A_ClericAttack
//
//  Spawns the spirits
//
//============================================================================

void A_ClericAttack()
{
	if (!Enemy)
		return;
	SpawnMissile(Enemy, HolyMissile);
	PlaySound('HolySymbolFire', CHAN_WEAPON);
}

