class ArtiFly : Artifact
	__mobjinfo__(83)
	__scriptid__(15);

//==========================================================================
//
//	Use
//
//==========================================================================

bool Use(bool Pickup)
{
	if (!Player(Owner.Player).GivePower(pw_flight))
	{
		return false;
	}
	if (Owner.Velocity.z <= -35.0 * 35.0)
	{
		// stop falling scream
		Owner.StopSound(CHAN_AUTO);
	}
	return true;
}

__states__
{
	S_ARTI_SOAR1('SOAR', 0, 5.0 / 35.0, S_ARTI_SOAR2) = none
	S_ARTI_SOAR2('SOAR', 1, 5.0 / 35.0, S_ARTI_SOAR3) = none
	S_ARTI_SOAR3('SOAR', 2, 5.0 / 35.0, S_ARTI_SOAR4) = none
	S_ARTI_SOAR4('SOAR', 1, 5.0 / 35.0, S_ARTI_SOAR1) = none
}

defaultproperties
{
	PickupMessage = "$txt_artifly";
	RespawnTime = 120.0 + 30.0 / 35.0;
	IconName = 'artisoar';
	IdleState = S_ARTI_SOAR1;
}
