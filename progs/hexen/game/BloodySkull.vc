class BloodySkull : PlayerPawn;

//==========================================================================
//
//  A_CheckSkullFloor
//
//==========================================================================

final void A_CheckSkullFloor()
{
	if (Origin.z <= FloorZ)
	{
		SetState(GetStatePlus(IdleState, 7, true));
		PlaySound('Drip', CHAN_VOICE);
	}
}

//==========================================================================
//
//  A_CheckSkullDone
//
//==========================================================================

final void A_CheckSkullDone()
{
	if (_Special2 == 666)
	{
		SetState(GetStatePlus(IdleState, 8, true));
	}
}

states
{
Spawn:
	BSKL ABCDFGH 5 A_CheckSkullFloor
	Loop
	BSKL I 16 A_CheckSkullDone
	Wait
	BSKL I 1050
	Stop
}

defaultproperties
{
	Radius = 4.0;
	Height = 4.0;
	Gravity = 0.125;
	ReactionCount = 8;
	bSolid = false;
	bShootable = false;
	bFloorClip = false;
	bTelestomp = false;
	bActivatePushWall = false;
	bWindThrust = false;
	bSlide = false;
	bNoBlockmap = true;
	bNoPassMobj = true;
	bCannotPush = true;
	bBounceSky = true;
}
