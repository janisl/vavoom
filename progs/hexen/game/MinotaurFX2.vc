class MinotaurFX2 : MinotaurFloorFire;

//============================================================================
//
//  A_MntrFloorFire
//
//============================================================================

final void A_MntrFloorFire()
{
	Actor A;

	Origin.z = FloorZ;
	A = Spawn(MinotaurFX3, vector(
		Origin.x + (Random() - Random()) * 4.0,
		Origin.y + (Random() - Random()) * 4.0, ONFLOORZ));
	A.Target = Target;
	A.Velocity.x = 0.00001;	// Force block checking
	A.CheckMissileSpawn();
}

__states__
{
	S_MNTRFX2_1('FX13', 0, 2.0 / 35.0, S_MNTRFX2_1) = A_MntrFloorFire
}

defaultproperties
{
	Radius = 5.0;
	Height = 12.0;
	Speed = 490.0;
	IdleState = S_MNTRFX2_1;
	// The Minotaur floor fire can step up any amount
	MaxStepHeight = 99999.0;
	bIgnoreFloorStep = true;
}
