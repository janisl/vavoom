class ArtiPork : Inventory
	__mobjinfo__(30)
	__scriptid__(14);

//==========================================================================
//
//	Use
//
//==========================================================================

bool Use(bool Pickup)
{
	EntityEx(Owner).SpawnPlayerMissile(PorkFX);
	EntityEx(Owner).SpawnPlayerMissileAngle(PorkFX,
		AngleMod360(Owner.Angles.yaw - 7.5));
	EntityEx(Owner).SpawnPlayerMissileAngle(PorkFX,
		AngleMod360(Owner.Angles.yaw + 7.5));
	EntityEx(Owner).SpawnPlayerMissileAngle(PorkFX,
		AngleMod360(Owner.Angles.yaw - 15.0));
	EntityEx(Owner).SpawnPlayerMissileAngle(PorkFX,
		AngleMod360(Owner.Angles.yaw + 15.0));
	return true;
}

