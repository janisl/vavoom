	S_EGGFXI1_1('FHFX', 8 | FF_FULLBRIGHT, 3.0 / 35.0, S_EGGFXI1_2) { }
	S_EGGFXI1_2('FHFX', 9 | FF_FULLBRIGHT, 3.0 / 35.0, S_EGGFXI1_3) { }
	S_EGGFXI1_3('FHFX', 10 | FF_FULLBRIGHT, 3.0 / 35.0, S_EGGFXI1_4) { }
	S_EGGFXI1_4('FHFX', 11 | FF_FULLBRIGHT, 3.0 / 35.0, none) { }
