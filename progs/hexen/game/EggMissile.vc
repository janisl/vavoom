class EggMissile : Projectile
	__scriptid__(40);

//==========================================================================
//
//  InflictorModifyDamage
//
//==========================================================================

int InflictorModifyDamage(Actor victim, Actor source, int damage)
{
	if (victim.bIsPlayer)
	{
		victim.MorphPlayer();
	}
	else
	{
		victim.MorphMonster();
	}
	return -1;	// Always return
}

