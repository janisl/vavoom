	S_EGGFX1('EGGM', 0, 4.0 / 35.0, S_EGGFX2) { }
	S_EGGFX2('EGGM', 1, 4.0 / 35.0, S_EGGFX3) { }
	S_EGGFX3('EGGM', 2, 4.0 / 35.0, S_EGGFX4) { }
