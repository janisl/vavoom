class SorcererFX3 : Projectile;

//============================================================================
//
//  A_SorcererBishopEntry
//
//============================================================================

void A_SorcererBishopEntry()
{
	Spawn(SorcererFX3Explosion, Origin);
	PlaySound(SightSound, CHAN_VOICE);
}

//============================================================================
//
//  A_SpawnBishop
//
//  Green spell - spawn bishops
//
//============================================================================

void A_SpawnBishop()
{
	Actor A;

	A = Spawn(Bishop, Origin);
	if (A)
	{
		if (!A.TestLocation())
		{
			A.SetState(none);
		}
	}
	SetState(none);
}

