class WeaponMageStaff : Weapon;

//==========================================================================
//
//	MStaffSpawn
//
//==========================================================================

void MStaffSpawn(float angle)
{
	Actor mo;

	mo = Player(Owner.Player).SpawnPlayerMissileAngle(MageStaffFX2, angle);
	if (mo)
	{
		mo.Instigator = Actor(Owner);
		mo.Enemy = Actor(mo.RoughMonsterSearch(10));
	}
}

//==========================================================================
//
//  A_MStaffAttack
//
//==========================================================================

final void A_MStaffAttack()
{
	float angle;

	Player(Owner.Player).Mana[HexenDefs::MANA_1] -=
		WeaponManaUse(Owner.Player.PClass, Player(Owner.Player).ReadyWeapon);
	Player(Owner.Player).Mana[HexenDefs::MANA_2] -=
		WeaponManaUse(Owner.Player.PClass, Player(Owner.Player).ReadyWeapon);
	angle = Owner.Angles.yaw;

	MStaffSpawn(angle);
	MStaffSpawn(angle - 5.0);
	MStaffSpawn(angle + 5.0);
	Owner.PlaySound('MageStaffFire', CHAN_WEAPON);
	Player(Owner.Player).DamageFlash = 0.0;
	Player(Owner.Player).BonusFlash = 0.0;
	Player(Owner.Player).WeaponCShift = CSHIFT(255, 187, 4, 76);
}

//==========================================================================
//
//  A_MStaffPalette1
//
//==========================================================================

final void A_MStaffPalette1()
{
	Player(Owner.Player).WeaponCShift = CSHIFT(255, 187, 4, 63);
}

//==========================================================================
//
//  A_MStaffPalette2
//
//==========================================================================

final void A_MStaffPalette2()
{
	Player(Owner.Player).WeaponCShift = CSHIFT(255, 187, 4, 51);
}

//==========================================================================
//
//  A_MStaffPalette3
//
//==========================================================================

final void A_MStaffPalette3()
{
	// reset back to original playpal
	Player(Owner.Player).WeaponCShift = 0;
}

