class Key : Pickup
	abstract;

int KeyType;

//==========================================================================
//
//  TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	return Player(Toucher.Player).GiveKey(KeyType) || !ShouldStay();
}

//==========================================================================
//
//	HidePickup
//
//==========================================================================

void HidePickup()
{
	if (bDropped || !ShouldStay())
	{
		// Only remove keys in single player game
		if (Level.Game.deathmatch && !bDropped)
		{
			HideSpecial();
		}
		else
		{
			Destroy();
		}
	}
}

//==========================================================================
//
//	ShouldStay
//
//==========================================================================

bool ShouldStay()
{
	return Level.Game.netgame;
}

defaultproperties
{
	Radius = 8.0;
	PickupSound = 'PickupKey';
}
