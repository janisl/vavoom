class ItemHealingBottle : Pickup
	__mobjinfo__(81);

//==========================================================================
//
//  TouchSpecial
//
//==========================================================================

void TouchSpecial(Actor Toucher)
{
	if (!Toucher.bPickUp)
	{
		// Can't be picked up by toucher
		return;
	}
	if (Toucher.Health <= 0)
	{
		// Toucher is dead
		return;
	}
	if (!Toucher.Player.GiveBody(10))
	{
		return;
	}
	cprint(Toucher.Player, TXT_ITEMHEALTH);
	if (Special)
	{
		ExecuteLineSpecial(Special, &Args[0], NULL, 0, Toucher);
		Special = 0;
	}
	if (deathmatch && !bDropped)
	{
		HideSpecial();
	}
	else
	{
		Remove();
	}
	Toucher.Player.BonusFlash += BONUSADD;
	Toucher.PlaySound('PickupItem', CHAN_ITEM);
}

__states__
{
	S_ITEM_PTN1_1('PTN1', 0, 'items/vial.md2', 0, 3.0 / 35.0, S_ITEM_PTN1_2) { }
	S_ITEM_PTN1_2('PTN1', 1, 'items/vial.md2', 0, 3.0 / 35.0, S_ITEM_PTN1_3) { }
	S_ITEM_PTN1_3('PTN1', 2, 'items/vial.md2', 0, 3.0 / 35.0, S_ITEM_PTN1_1) { }
}

defaultproperties
{
	bFloatBob = true;
	IdleState = S_ITEM_PTN1_1;
}

