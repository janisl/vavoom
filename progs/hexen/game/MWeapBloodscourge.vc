class MWeapBloodscourge : MageWeapon;

int				CShift;

//==========================================================================
//
//	GetBlend
//
//==========================================================================

int GetBlend()
{
	return CShift;
}

//==========================================================================
//
//	MStaffSpawn
//
//==========================================================================

final void MStaffSpawn(float angle)
{
	EntityEx	mo;

	mo = SpawnPlayerMissileAngle(MageStaffFX2, angle);
	if (mo)
	{
		mo.Target = self;
		mo.Tracer = Actor(mo.RoughMonsterSearch(10));
	}
}

//==========================================================================
//
//  A_MStaffAttack
//
//==========================================================================

final void A_MStaffAttack()
{
	float angle;

	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	Wpn.DepleteAmmo();
	angle = Angles.yaw;

	MStaffSpawn(angle);
	MStaffSpawn(angle - 5.0);
	MStaffSpawn(angle + 5.0);
	PlaySound('MageStaffFire', CHAN_WEAPON);
	MWeapBloodscourge(Wpn).CShift = RGBA(255, 187, 4, 76);
}

//==========================================================================
//
//  A_MStaffPalette1
//
//==========================================================================

final void A_MStaffPalette1()
{
	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	MWeapBloodscourge(Wpn).CShift = RGBA(255, 187, 4, 63);
}

//==========================================================================
//
//  A_MStaffPalette2
//
//==========================================================================

final void A_MStaffPalette2()
{
	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	MWeapBloodscourge(Wpn).CShift = RGBA(255, 187, 4, 51);
}

//==========================================================================
//
//  A_MStaffPalette3
//
//==========================================================================

final void A_MStaffPalette3()
{
	if (!bIsPlayer)
	{
		return;
	}
	Weapon Wpn = PlayerEx(Player).ReadyWeapon;

	// reset back to original playpal
	MWeapBloodscourge(Wpn).CShift = 0;
}

states
{
Ready:
	MSTF AAAAAABBBBBBCCCCCCDDDDDDEEEEEEFFFFF 1 A_WeaponReady
	Loop
Deselect:
	MSTF A 1 A_Lower
	Loop
Select:
	MSTF A 1 A_Raise
	Loop
Fire:
	MSTF G 4 Offset(0, 40)
	MSTF H 4 Bright Offset(0, 48) A_MStaffAttack
	MSTF H 2 Bright Offset(0, 48) A_MStaffPalette1
	MSTF I 2 Offset(0, 48) A_MStaffPalette2
	MSTF I 2 Offset(0, 48) A_MStaffPalette3
	MSTF I 1 Offset(0, 40)
	MSTF J 5 Offset(0, 36)
	Goto Ready
}

defaultproperties
{
	WeaponClass = HexenDefs::PCLASS_MAGE;
	Slot = 4;
	SelectionOrder = 3100;
	AmmoType1 = Mana1;
	AmmoType2 = Mana2;
	AmmoUse1 = 15;
	AmmoUse2 = 15;
	PSpriteSY = 20.0;
	PickupMessage = "$txt_weapon_m4";
	BotCombatDist= 384.0;
	bBotProjectile = true;
	bExtremeDeath = true;
}
