class ZWallTorch : Decoration
	__mobjinfo__(54);

void OnMapSpawn(mthing_t *mthing)
{
	::OnMapSpawn(mthing);
	if (mthing && !TID && Class == ZWallTorch)
		Level.AddStaticLight(Origin + vector(0.0, 0.0, 48.0),
			mthing->arg1 ? itof(mthing->arg1) * 8.0 : 128.0);
}

__states__
{
	S_ZWALLTORCH1('WLTR', 0 | FF_FULLBRIGHT, 'lights/cflmtrch.md2', 0, 5.0 / 35.0, S_ZWALLTORCH2) { }
	S_ZWALLTORCH2('WLTR', 1 | FF_FULLBRIGHT, 'lights/cflmtrch.md2', 1, 5.0 / 35.0, S_ZWALLTORCH3) { }
	S_ZWALLTORCH3('WLTR', 2 | FF_FULLBRIGHT, 'lights/cflmtrch.md2', 2, 5.0 / 35.0, S_ZWALLTORCH4) { }
	S_ZWALLTORCH4('WLTR', 3 | FF_FULLBRIGHT, 'lights/cflmtrch.md2', 3, 5.0 / 35.0, S_ZWALLTORCH5) { }
	S_ZWALLTORCH5('WLTR', 4 | FF_FULLBRIGHT, 'lights/cflmtrch.md2', 4, 5.0 / 35.0, S_ZWALLTORCH6) { }
	S_ZWALLTORCH6('WLTR', 5 | FF_FULLBRIGHT, 'lights/cflmtrch.md2', 5, 5.0 / 35.0, S_ZWALLTORCH7) { }
	S_ZWALLTORCH7('WLTR', 6 | FF_FULLBRIGHT, 'lights/cflmtrch.md2', 6, 5.0 / 35.0, S_ZWALLTORCH8) { }
	S_ZWALLTORCH8('WLTR', 7 | FF_FULLBRIGHT, 'lights/cflmtrch.md2', 7, 5.0 / 35.0, S_ZWALLTORCH1) { }
	S_ZWALLTORCH_U('WLTR', 8, 'lights/castrch.md2', 0, -1.0, none) { }
}

//==========================================================================
//
//	Activate
//
//==========================================================================

bool Activate()
{
	SetState(S_ZWALLTORCH1);
	PlaySound('Ignite', CHAN_VOICE);
	return true;
}

//==========================================================================
//
//	Deactivate
//
//==========================================================================

bool Deactivate()
{
	SetState(S_ZWALLTORCH_U);
	return true;
}

defaultproperties
{
	bNoBlockmap = true;
	bNoGravity = true;
	IdleState = S_ZWALLTORCH1;
}

