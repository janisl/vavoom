class ZCorpseLynchedNoHeart : Decoration
	__mobjinfo__(109);

//============================================================================
//
//  A_CorpseBloodDrip
//
//============================================================================

void A_CorpseBloodDrip()
{
	if (Random() > 0.5)
	{
		return;
	}
	Spawn(CorpseBloodDrip, Origin + vector(0.0, 0.0, Height / 2.0));
}

__states__
{
	S_ZCORPSELYNCHED2('CPS5', 0, 140.0 / 35.0, S_ZCORPSELYNCHED2) { A_CorpseBloodDrip(); }
}

defaultproperties
{
	Radius = 10.0;
	Height = 100.0;
	bSolid = true;
	bSpawnCeiling = true;
	bNoGravity = true;
	IdleState = S_ZCORPSELYNCHED2;
}

