class ArtiBoostArmor : Inventory
	__mobjinfo__(8041)
	__scriptid__(22);

//==========================================================================
//
//	Use
//
//==========================================================================

bool Use(bool Pickup)
{
	int i;
	bool good = false;
	for (i = 0; i < 4; i++)
	{
		// 1 point per armor type
		HexenArmor Armor = Spawn(HexenArmor);
		Armor.Health = i;
		Armor.Amount = 1;
		if (Armor.TryPickup(EntityEx(Owner)))
		{
			good = true;
		}
		else
		{
			Armor.Destroy();
		}
	}
	return good;
}

