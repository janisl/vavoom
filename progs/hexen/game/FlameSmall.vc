class FlameSmall : Decoration
	__mobjinfo__(10501)
	__scriptid__(97);

states
{
Inactive:
	FFSM A 2
	FFSM B 2 A_HideThing
	FFSM C 200
	Wait
Spawn:
Active:
	FFSM A 3 Bright
	FFSM A 3 Bright A_UnHideThing
	FFSM ABCDE 3 Bright
	Goto Spawn+2
}

//==========================================================================
//
//	Activate
//
//==========================================================================

bool Activate()
{
	PlaySound('Ignite', CHAN_VOICE);
	SetState(FindState('Active'));
	bStaticLight = true;
	return true;
}

//==========================================================================
//
//	Deactivate
//
//==========================================================================

bool Deactivate()
{
	SetState(FindState('Inactive'));
	bStaticLight = false;
	return true;
}

defaultproperties
{
	RenderStyle = STYLE_Add;
	bHidden = true;
	bNoTeleport = true;
	bStaticLight = true;
	LightColour = RGB(255, 255, 0);
	LightRadius = 64.0;
}
