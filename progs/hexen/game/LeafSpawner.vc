class LeafSpawner : Actor
	__mobjinfo__(113);

//==========================================================================
//
//  A_LeafSpawn
//
//==========================================================================

final void A_LeafSpawn()
{
	Actor A;
	int i;

	for (i = (P_Random() & 3) + 1; i; i--)
	{
		A = Spawn(P_Random() & 1 ? Leaf2 : Leaf1, Origin + vector(
			(Random() - Random()) * 64.0,
			(Random() - Random()) * 64.0,
			Random() * 64.0));
		if (A)
		{
			A.Thrust(Angles.yaw, Random() * 2.0 + 3.0);
			A.Target = self;
		}
	}
}

states
{
Spawn:
	MAN1 A 20 A_LeafSpawn
	Loop
}

defaultproperties
{
	bNoSector = true;
	bNoBlockmap = true;
	bNoPassMobj = true;
	bDynamicLight = false;
}
