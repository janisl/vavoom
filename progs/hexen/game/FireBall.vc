class FireBall : Projectile
	__scriptid__(10);

//===========================================================================
//
//  A_Particles
//
//===========================================================================

final void A_Particles()
{
	int i;
	
	for (i = 0; i < MAXPLAYERS; i++)
	{
		if (!Level.Game.Players[i])
			continue;
		if (!Level.Game.Players[i].bSpawned)
			continue;
		PlayerEx(Level.Game.Players[i]).ParticleEffect(10, LineSpecialLevelInfo::pt_static, 0, Origin, 10.0,
				vector(256.0, 256.0, 256.0), 0.3, 20.0, 85.0, RGB(255, 128, 0), 1.0, 2.0);
	}
}

states
{
Spawn:
	FBL1 AB 4 Bright
	Loop
Death:
	XPL1 A 4 Bright A_Particles
	XPL1 BCDEF 4 Bright
	Stop
}

defaultproperties
{
	Radius = 8.0;
	Height = 8.0;
	Speed = 70.0;
	MissileDamage = 4;
	DamageType = 'Fire';
	bActivateImpact = false;
	bActivatePCross = false;
	DeathSound = 'Fireball';
	bDynamicLight = true;
	DLightColour = RGB(255, 128, 0);
	DLightRadius = 126.0;
}
