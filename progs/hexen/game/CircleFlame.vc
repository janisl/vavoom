class CircleFlame : Projectile;

float FlameRotSpeed;

//============================================================================
//
//	A_CFlameRotate
//
//============================================================================

void A_CFlameRotate()
{
	float an;

	an = AngleMod360(Angles.yaw + 90.0);
	Velocity.x = Special1f + FlameRotSpeed * cos(an);
	Velocity.y = Special2f + FlameRotSpeed * sin(an);
	Angles.yaw = AngleMod360(Angles.yaw + 90.0 / 15.0);
}

