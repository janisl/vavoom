	__mobjinfo__(8004)
	__scriptid__(75);

//==========================================================================
//
//  TryPickup
//
//==========================================================================

bool TryPickup(EntityEx Toucher)
{
	if (Player(Toucher.Player).GiveMana(Mana1, Amount) |
		Player(Toucher.Player).GiveMana(Mana2, Amount))
	{
		GoAwayAndDie();
		return true;
	}
	return false;
}

