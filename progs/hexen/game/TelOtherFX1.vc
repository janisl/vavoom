class TelOtherFX1 : Projectile;

//==========================================================================
//
//  DoSpecialDamage
//
//==========================================================================

int DoSpecialDamage(EntityEx victim, EntityEx source, int damage)
{
	if (victim.bMonster && !Actor(victim).bBoss && !Serpent(victim))
	{
		Actor(victim).TeleportOther();
	}
	return -1;
}

//==========================================================================
//
//  A_TeloSpawnA
//
//==========================================================================

final void A_TeloSpawnA()
{
	Actor A;

	A = Spawn(TelOtherFX2, Origin);
	if (A)
	{
		A.Angles.yaw = Angles.yaw;
		A.Target = Target;
		A.Velocity = Velocity / 2.0;
	}
}

