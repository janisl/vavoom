class BishopBlur : Actor;

//==========================================================================
//
//	A_SetAltShadow
//
//==========================================================================

final void A_SetAltShadow()
{
	RenderStyle = STYLE_Translucent;
	Alpha = 0.666;
}

states
{
Spawn:
	BISH A 16
	BISH A 8 A_SetAltShadow
	Stop
}

defaultproperties
{
	RenderStyle = STYLE_Translucent;
	Alpha = 0.333;
	bNoBlockmap = true;
	bNoGravity = true;
}
