{
	Radius = 4.0;
	Height = 4.0;
	Gravity = 0.125;
	Speed = 350.0;
	MissileDamage = 1;
	bMissile = true;
	bNoBlockmap = true;
	bDropOff = true;
	bNoTeleport = true;
	bBloodSplatter = true;
	DamageType = 'Ice';
}
