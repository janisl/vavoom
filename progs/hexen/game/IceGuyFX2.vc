class IceGuyFX2 : Actor;

//==========================================================================
//
//  DoSpecialDamage
//
//==========================================================================

int DoSpecialDamage(EntityEx victim, EntityEx source, int damage)
{
	return damage >> 1;
}

states
{
Spawn:
	ICPR NOP 3 Bright
	Loop
}

