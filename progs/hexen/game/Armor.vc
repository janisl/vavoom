class Armor : Pickup
	abstract;

int ArmorType;

//==========================================================================
//
//  TouchSpecial
//
//==========================================================================

void TouchSpecial(Actor Toucher)
{
	PlayerPawn P;

	if (!Toucher.bPickUp)
	{
		// Can't be picked up by toucher
		return;
	}
	if (Toucher.Health <= 0)
	{
		// Toucher is dead
		return;
	}
	P = PlayerPawn(Toucher);
	if (!P)
	{
		//	Shouldn't happen
		return;
	}
	if (!P.GiveArmor(ArmorType, -1))
	{
		return;
	}
	cprint(P.Player, armorText[ArmorType]);
	if (Special)
	{
		ExecuteLineSpecial(Special, &Args[0], NULL, 0, P);
		Special = 0;
	}
	if (deathmatch && !bDropped)
	{
		HideSpecial();
	}
	else
	{
		Remove();
	}
	P.Player.BonusFlash += BONUSADD;
	P.PlaySound('PickupItem', CHAN_ITEM);
}

defaultproperties
{
	bNoGravity = true;
}

