class SerpentFX : Actor;

//==========================================================================
//
//  A_ContMobjSound
//
//==========================================================================

final void A_ContMobjSound()
{
	PlaySound('SerpentFXContinuous', CHAN_VOICE);
}

states
{
Spawn:
	SSFX A 3 Bright A_ContMobjSound
	SSFX BAB 3 Bright
	Loop
Death:
	SSFX CDEFGH 4 Bright
	Stop
}

defaultproperties
{
	Radius = 8.0;
	Height = 10.0;
	Speed = 525.0;
	MissileDamage = 4;
	RenderStyle = STYLE_Add;
	bMissile = true;
	bNoBlockmap = true;
	bDropOff = true;
	bNoGravity = true;
	bNoTeleport = true;
	bBloodSplatter = true;
	DeathSound = 'SerpentFXHit';
}
