class MenuScreenPlayerSetup : MenuScreen;

MenuSpriteAnim Anim;
int Colour;
int PClass;

void SetColour()
{
	Anim.SprDef = 500 + PClass;
	Anim.Translation = 0;
	if (PClass == HexenDefs::PCLASS_FIGHTER)
	{
		if (Colour == 0)
			Anim.Translation = 2;
	else if (Colour != 2)
			Anim.Translation = Colour;
	}
	else
	{
		if (Colour)
			Anim.Translation = PClass * (MAXPLAYERS - 1) + Colour;
	}
}

void SetSpriteColour(int newColour)
{
	Colour = newColour;
	SetColour();
}

void SetPClass(int newPClass)
{
	PClass = newPClass;
	SetColour();
}

void CreateChoices()
{
	R_InstallSprite("PLAY", 500);
	R_InstallSprite("CLER", 501);
	R_InstallSprite("MAGE", 502);

	Anim = MenuSpriteAnim(NewChild(MenuSpriteAnim));
	Anim.SetPos(260, 120);
	Anim.SprDef = 500;
	Anim.Speed = 8;
	Anim.NumFrames = 4;

	::CreateChoices();
}

defaultproperties
{
	Choices[0] = MenuChoice_PlayerName;
	Choices[1] = MenuChoice_Colour;
	Choices[2] = MenuChoice_PClass;
	ChoicesStartX = 16;
	ChoicesStartY = 40;
	SelectorType = MenuSelector_SmallLeft;
	Title = "PLAYER SETUP";
}
