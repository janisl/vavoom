bool ChangeMonsterAttacks(Object Sender, int newValue)
{
	SetCvar('alternate_monster_attacks', newValue);
	return true;
}

defaultproperties
{
	ChoicesStartX = 180;
	ChoicesStartY = 26;
	Width = 340;
	SelectorType = MenuSelector_SmallRight;
	Title = "GAMEPLAY OPTIONS";
}
