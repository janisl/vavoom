class MenuScreenHelp:MenuScreen;

MenuHelpPage Page;
string PageNames[3];
int NumPages;
int CurPage;

void CreateChoices(void)
{
	Page = MenuHelpPage(NewChild(MenuHelpPage));
	Page.SetPage(PageNames[CurPage]);

	::CreateChoices();
}

bool Key(int key)
{
	CurPage++;
	LocalSound('menu/clear');

	if (key == K_ESCAPE || CurPage >= NumPages)
	{
		ForceMenuOff();
	}
	else
	{
		Page.SetPage(PageNames[CurPage]);
	}

	return true;
}

defaultproperties
{
	PageNames[0] = "HELP1";
	PageNames[1] = "HELP2";
	PageNames[2] = "CREDIT";
	NumPages = 3;
	CurPage = 0;
}

