class MenuStaticBitmap:MenuObject;

string PicName;
int PicType;
int Handle;

void InitWindow(void)
{
	::InitWindow();
	Disable();
	if (PicName)
	{
		Handle = R_RegisterPic(PicName, PicType);
	}
}

void DrawWindow(GC gc)
{
	gc.DrawIcon(0, 0, Handle);
}

defaultproperties
{
	PicType = PIC_PATCH;
}

