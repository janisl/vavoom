class MenuScreenClass : MenuScreen;

MenuStaticBitmap	FighterBox;
Widget				FighterWalk;
MenuStaticBitmap	ClericBox;
Widget				ClericWalk;
MenuStaticBitmap	MageBox;
Widget				MageWalk;

//==========================================================================
//
//	CreateChoices
//
//==========================================================================

void CreateChoices()
{
	MenuTextButton		Btn;
	int					currentY;

	currentY = ChoicesStartY;

	FighterBox = NewChild(MenuStaticBitmap);
	FighterBox.SetOrigin(174, 28);
	FighterBox.SetPic('m_fbox');

	FighterWalk = NewChild(MenuFighterWalk);
	FighterWalk.SetPos(174 + 24, 28 + 12);

	Btn = MenuTextButton(NewChild(MenuBigTextButton));
	Btn.SetPos(ChoicesStartX, currentY);
	Btn.Text = "FIGHTER";
	Btn.FocusLost = FighterFocusLost;
	Btn.FocusReceived = FighterFocusReceived;
	Btn.Activated = FighterActivate;
	currentY += Btn.Height;

	ClericBox = NewChild(MenuStaticBitmap);
	ClericBox.SetOrigin(174, 28);
	ClericBox.SetPic('m_cbox');
	ClericBox.Hide();

	ClericWalk = NewChild(MenuClericWalk);
	ClericWalk.SetPos(174 + 24, 28 + 12);
	ClericWalk.Hide();

	Btn = MenuTextButton(NewChild(MenuBigTextButton));
	Btn.SetPos(ChoicesStartX, currentY);
	Btn.Text = "CLERIC";
	Btn.FocusLost = ClericFocusLost;
	Btn.FocusReceived = ClericFocusReceived;
	Btn.Activated = ClericActivate;
	currentY += Btn.Height;

	MageBox = NewChild(MenuStaticBitmap);
	MageBox.SetOrigin(174, 28);
	MageBox.SetPic('m_mbox');
	MageBox.Hide();

	MageWalk = NewChild(MenuMageWalk);
	MageWalk.SetPos(174 + 24, 28 + 12);
	MageWalk.Hide();

	Btn = MenuTextButton(NewChild(MenuBigTextButton));
	Btn.SetPos(ChoicesStartX, currentY);
	Btn.Text = "MAGE";
	Btn.FocusLost = MageFocusLost;
	Btn.FocusReceived = MageFocusReceived;
	Btn.Activated = MageActivate;
	currentY += Btn.Height;
}

//==========================================================================
//
//	FighterFocusLost
//
//==========================================================================

void FighterFocusLost(Object Sender)
{
	FighterBox.Hide();
	FighterWalk.Hide();
}

//==========================================================================
//
//	FighterFocusReceived
//
//==========================================================================

void FighterFocusReceived(Object Sender)
{
	FighterBox.Show();
	FighterWalk.Show();
}

//==========================================================================
//
//	FighterActivate
//
//==========================================================================

void FighterActivate(Object Sender)
{
	ActivateClass(HexenDefs::PCLASS_FIGHTER, MenuScreenFighterSkill);
}

//==========================================================================
//
//	ClericFocusLost
//
//==========================================================================

void ClericFocusLost(Object Sender)
{
	ClericBox.Hide();
	ClericWalk.Hide();
}

//==========================================================================
//
//	ClericFocusReceived
//
//==========================================================================

void ClericFocusReceived(Object Sender)
{
	ClericBox.Show();
	ClericWalk.Show();
}

//==========================================================================
//
//	ClericActivate
//
//==========================================================================

void ClericActivate(Object Sender)
{
	ActivateClass(HexenDefs::PCLASS_CLERIC, MenuScreenClericSkill);
}

//==========================================================================
//
//	MageFocusLost
//
//==========================================================================

void MageFocusLost(Object Sender)
{
	MageBox.Hide();
	MageWalk.Hide();
}

//==========================================================================
//
//	MageFocusReceived
//
//==========================================================================

void MageFocusReceived(Object Sender)
{
	MageBox.Show();
	MageWalk.Show();
}

//==========================================================================
//
//	MageActivate
//
//==========================================================================

void MageActivate(Object Sender)
{
	ActivateClass(HexenDefs::PCLASS_MAGE, MenuScreenMageSkill);
}

//==========================================================================
//
//	ActivateClass
//
//==========================================================================

void ActivateClass(int PClass, class<MenuScreen> SkillMenuType)
{
	ClientGame(ClGame).MenuPClass = PClass;
	ClientGame(ClGame).SkillMenuType = SkillMenuType;
	if (P_GetNumEpisodes() > 1)
	{
		ClGame.PushMenuScreen(ClGame.SpawnMenu(MenuScreenEpisode));
	}
	else if (P_GetNumEpisodes() == 1)
	{
		ClGame.MenuStartMap = P_GetEpisodeDef(0)->Name;
		if (P_GetEpisodeDef(0)->bNoSkillMenu)
		{
			ClGame.NewGame(sk_medium);
		}
		else
		{
			ClGame.PushMenuScreen(ClGame.SpawnMenu(SkillMenuType));
		}
	}
	else
	{
		ClGame.MenuStartMap = P_TranslateMap(1);
		ClGame.PushMenuScreen(ClGame.SpawnMenu(SkillMenuType));
	}
}

defaultproperties
{
	ChoicesStartX = 66;
	ChoicesStartY = 66;
	SelectorType = MenuSelector_BigArrow;
	Title = "CHOOSE CLASS:";
	// 34, TEXT_BIG
}
