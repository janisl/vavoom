class MenuScreenFighterSkill : MenuScreen;

string SkillNames[5];
int PClass;

void CreateChoices()
{
	int i;
	MenuChoice_Skill newChoice;

	for (i = 0; i < 5; i++)
	{
		newChoice = MenuChoice_Skill(NewChild(MenuChoice_Skill));
		newChoice.SetPos(ChoicesStartX, ChoicesStartY + i * 18);
		newChoice.Text = SkillNames[i];
		newChoice.PClass = PClass;
		newChoice.SkillLevel = i;
	}
}

void SetDefaultChoice()
{
	::SetDefaultChoice();
	CycleNextChoice();
	CycleNextChoice();
}

defaultproperties
{
	SkillNames[0] = "SQUIRE";
	SkillNames[1] = "KNIGHT";
	SkillNames[2] = "WARRIOR";
	SkillNames[3] = "BERSERKER";
	SkillNames[4] = "TITAN";
	ChoicesStartX = 120;
	ChoicesStartY = 44;
	PClass = HexenDefs::PCLASS_FIGHTER;
	SelectorType = MenuSelector_BigArrow;
	Title = "CHOOSE SKILL LEVEL:";
}

