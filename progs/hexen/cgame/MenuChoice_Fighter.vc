class MenuChoice_Fighter : MenuBigTextButton;

MenuObject Box;
MenuObject Walk;
classid BoxType;
classid WalkType;

void InitWindow()
{
	::InitWindow();

	Box = MenuObject(MenuScreen(Parent).NewChild(BoxType));
	Box.SetPos(174, 28);
	Box.Hide();

	Walk = MenuObject(MenuScreen(Parent).NewChild(WalkType));
	Walk.SetPos(174 + 24, 28 + 12);
	Walk.Hide();
}

void FocusLost()
{
	::FocusLost();
	Box.Hide();
	Walk.Hide();
}

void FocusReceived()
{
	::FocusReceived();
	Box.Show();
	Walk.Show();
}

void ActivateEvent()
{
	GetClGame().PushMenuScreen(GetClGame().SpawnMenu(MenuScreenFighterSkill));
}

defaultproperties
{
	Text = "FIGHTER";
	BoxType = MenuFighterBox;
	WalkType = MenuFighterWalk;
}
