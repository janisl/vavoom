//==========================================================================
//
//  UpdateMobj
//
//==========================================================================

void UpdateMobj(Entity mobj, int key, float DeltaTime)
{
	dlight_t *dl;

	switch (mobj.Effects & HexenDefs::EF_DLIGHT_MASK)
	{
	case HexenDefs::EF_DL_NONE:
		break;

	case HexenDefs::EF_DL_WHITE:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(255, 255, 255);
		dl->die = time + 0.1;
		break;

	case HexenDefs::EF_DL_RED:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(255, 0, 0);
		dl->die = time + 0.1;
		break;

	case HexenDefs::EF_DL_GREEN:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(0, 255, 0);
		dl->die = time + 0.1;
		break;

	case HexenDefs::EF_DL_BLUE:
		dl = AllocDlight(key);
		dl->origin = mobj.Origin;
		dl->radius = 200.0;
		dl->colour = RGB(0, 0, 255);
		dl->die = time + 0.1;
		break;
	}
}

