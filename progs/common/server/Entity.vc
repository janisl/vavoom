//==========================================================================
//
//	InsertIntoTIDList
//
//==========================================================================

void InsertIntoTIDList(int tid)
{
	int i;
	int index;

	index = -1;
	for (i = 0; TIDList[i] != 0; i++)
	{
		if (TIDList[i] == -1)
		{
			// Found empty slot
			index = i;
			break;
		}
	}
	if (index == -1)
	{
		// Append required
		if (i == MAX_TID_COUNT)
		{
			Error("P_InsertMobjIntoTIDList: MAX_TID_COUNT exceeded.");
		}
		index = i;
		TIDList[index + 1] = 0;
	}
	TID = tid;
	TIDList[index] = tid;
	TIDMobj[index] = self;
}

//==========================================================================
//
//	RemoveFromTIDList
//
//==========================================================================

void RemoveFromTIDList()
{
	int i;

	for (i = 0; TIDList[i] != 0; i++)
	{
		if (TIDMobj[i] == self)
		{
			TIDList[i] = -1;
			TIDMobj[i] = none;
			TID = 0;
			return;
		}
	}
	TID = 0;
}

