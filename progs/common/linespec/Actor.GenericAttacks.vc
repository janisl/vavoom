//
//  A_MinotaurCharge
//
//==========================================================================

final void A_MinotaurCharge()
{
	Actor puff;

	if (!Target)
	{
		return;
	}

	if (Special1 > 0)
	{
		class<Actor> PuffType = PhoenixPuff;
		if (bSummonedMonster)
		{
			PuffType = PunchPuff;
		}
		puff = Spawn(PuffType, Origin);
		puff.Velocity.z = 2.0 * 35.0;
		Special1--;
	}
	else
	{
		bSkullFly = false;
		SetState(SeeState);
	}
}
