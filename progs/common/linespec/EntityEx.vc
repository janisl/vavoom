final void TakeInventory(name ItemName, int Amount)
{
	if (Amount <= 0)
	{
		return;
	}
	if (!stricmp(va("%n", ItemName), "Armor"))
	{
		ItemName = 'BasicArmor';
	}

	//	Get class of the item.
	class<Inventory> ItemClass = class<Inventory>(FindClass(ItemName));
	if (!ItemClass)
	{
		return;
	}

	Inventory Item = FindInventory(ItemClass);
	if (!Item)
	{
		return;
	}

	Item.Amount -= Amount;
	if (Item.Amount <= 0)
	{
		if (Item.bKeepDepleted)
		{
			Item.Amount = 0;
		}
		else
		{
			Item.Destroy();
		}
	}
}

