final void A_SkelMissile()
{
	EntityEx A;

	if (!Target)
	{
		return;
	}

	A_FaceTarget();
	Origin.z += 16.0;	// so missile spawns higher
	A = SpawnMissile(Target, RevenantTracer);
	Origin.z -= 16.0;	// back to normal

	if (A)
	{
		A.UnlinkFromWorld();
		A.Origin = A.Origin + A.Velocity * 0.03;
		A.LinkToWorld();
		A.Tracer = Target;
		A.bSeekerMissile = true;
	}
}

