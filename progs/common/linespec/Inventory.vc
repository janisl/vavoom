final void BecomePickup()
{
	if (Owner)
	{
		EntityEx(Owner).RemoveInventory(self);
	}
	UnlinkFromWorld();
	bNoSector = false;
	bNoBlockmap = false;
	LinkToWorld();
	SetState(IdleState);
}

