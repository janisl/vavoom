final void A_FirePistol()
{
	TVec dir;
	bool Accurate;

	if (bIsPlayer)
	{
		Weapon Wpn = PlayerEx(Player).ReadyWeapon;
		if (Wpn)
		{
			if (!Wpn.DepleteAmmo(, 1))
			{
