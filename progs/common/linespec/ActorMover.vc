//**
//**	ActorMover: Moves any actor along a camera path
//**
//**	Same as PathFollower, except
//**	args[2], bit 7: make nonsolid
//**	args[3] = tid of thing to move
//**
//**************************************************************************

class ActorMover : PathFollower
	__mobjinfo__(9074);

bool bSavedNoGravity;
bool bSavedNoBlockmap;
bool bSavedSolid;
bool bSavedDormant;

//==========================================================================
//
//	BeginPlay
//
//==========================================================================

void BeginPlay()
{
	EntityEx A;

	::BeginPlay();

	foreach AllThinkers(EntityEx, A)
	{
		if (A.TID == Args[3])
		{
			Target = A;
			break;
		}
	}

	if (Target == none)
	{
		print("ActorMover %d: Can't find target %d", TID, Args[3]);
	}
}

//==========================================================================
//
//	Interpolate
//
//==========================================================================

bool Interpolate()
{
	if (Target == none)
		return true;

	if (::Interpolate())
	{
		if (!Target.TryMove(Origin))
		{
			return false;
		}

		if (Args[2] & 2)
			Target.Angles.yaw = Angles.yaw;
		if (Args[2] & 4)
			Target.Angles.pitch = Angles.pitch;

		return true;
	}
	return false;
}

//==========================================================================
//
//	Activate
//
//==========================================================================

bool Activate()
{
	if (Target == none || bActive)
		return false;

	::Activate();
	bSavedNoGravity = Target.bNoGravity;
	bSavedNoBlockmap = Target.bNoBlockmap;
	bSavedSolid = Target.bSolid;
	bSavedDormant = Target.bDormant;
	Target.bNoGravity = true;
	if (Args[2] & 128)
	{
		Target.UnlinkFromWorld();
		Target.bNoBlockmap = true;
		Target.bSolid = false;
		Target.LinkToWorld();
	}
	if (Target.bMonster)
	{
		Target.bDormant = true;
	}
	return true;
}

//==========================================================================
//
//	Deactivate
//
//==========================================================================

bool Deactivate()
{
	::Deactivate();
	if (Target != none)
	{
		Target.bSolid = bSavedSolid;
		Target.bNoGravity = bSavedNoGravity;
		Target.UnlinkFromWorld();
		Target.bNoBlockmap = bSavedNoBlockmap;
		Target.LinkToWorld();
		Target.bDormant = bSavedDormant;
	}
	return true;
}

