//==========================================================================
//
//  DistTo
//
//==========================================================================

final float DistTo(Entity Other)
{
	return Length(Other.GetCentre() - GetCentre());
}

//==========================================================================
//
//  DistTo2
//
//==========================================================================

final float DistTo2(Entity Other)
{
	TVec dir;

	dir = Other.Origin - Origin;
	dir.z = 0.0;
	return Length(dir);
}

//==========================================================================
//
//	GetCentre
//
//==========================================================================

final TVec GetCentre()
{
	return Origin + vector(0.0, 0.0, Height * 0.5 - FloorClip);
}

