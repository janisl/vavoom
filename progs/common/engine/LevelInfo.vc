{
	MSG_Select(MSG_SV_SIGNON);
	if (MSG_CheckSpace(8))
	{
		MSG_WriteByte(svc_static_light);
		MSG_WriteShort(ftoi(origin.x));
		MSG_WriteShort(ftoi(origin.y));
		MSG_WriteShort(ftoi(origin.z));
		MSG_WriteByte(ftoi(radius / 8.0));
	}
	else
	{
		print("Too many static lights");
