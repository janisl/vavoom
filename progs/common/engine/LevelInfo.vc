//==========================================================================
//
//	CreateTIDList
//
//==========================================================================

void CreateTIDList()
{
	int i;
	Entity mobj;

	i = 0;
	FOREACH(Entity, mobj)
	{
		if (mobj.TID != 0)
		{
			//	Add to list
			if (i == MAX_TID_COUNT)
			{
				Error("P_CreateTIDList: MAX_TID_COUNT exceeded.");
			}
			TIDList[i] = mobj.TID;
			TIDMobj[i++] = mobj;
		}
	}
	//	Add termination marker
	TIDList[i] = 0;
}

