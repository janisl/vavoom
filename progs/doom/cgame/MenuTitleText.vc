class MenuTitleText:MenuObject;

string Text;

void InitWindow(void)
{
	::InitWindow();
	Disable();
}

void DrawWindow(GC gc)
{
	T_SetFont(font_big);
	T_SetAlign(hcenter, vbottom);
	gc.DrawText(0, 0, Text);
}

