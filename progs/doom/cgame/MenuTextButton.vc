class MenuTextButton : MenuChoice;

name ActivateSound;
string Text;
name TextFont;
int TextHAlign;
int TextVAlign;

delegate void Activated(Object Sender);

void ActivateEvent()
{
	if (Activated)
		Activated(self);
}

bool OnKeyDown(int key)
{
	if (key == K_ENTER || key == K_PADENTER ||
		key == K_MOUSE1 || key == K_JOY1)
	{
		ActivateEvent();
		LocalSound(ActivateSound);
		return true;
	}
	return false;
}

void OnMouseClick(int X, int Y)
{
	ActivateEvent();
	LocalSound(ActivateSound);
}

void OnDraw()
{
	SetFont(TextFont);
	SetTextAlign(TextHAlign, TextVAlign);
	DrawText(CursorXOffs, 0, Text);
}

defaultproperties
{
	ActivateSound = 'menu/choose';
}
