class MenuHelpPage : MenuStaticBitmap;

//==========================================================================
//
//	SetPage
//
//==========================================================================

void SetPage(name pageName)
{
	Handle = R_RegisterPic(pageName);
}

void DrawWindow(GC gc)
{
	gc.DrawFullScreenPic(Handle);
}

defaultproperties
{
#ifdef DOOM2
	PicName = 'help';
#else
	PicName = 'help1';
#endif
}
