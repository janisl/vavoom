}

//==========================================================================
//
//	ActivateConsole
//
//==========================================================================

void ActivateConsole(Object Sender)
{
	CmdBuf_AddText("ToggleConsole\n");
}

defaultproperties
{
	ChoicesStartX = 160;
	ChoicesStartY = 32;
	SelectorType = MenuSelector_SmallRight;
	Title = "OPTIONS";
}
