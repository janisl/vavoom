class MenuSelector_Skull : Widget;

int selector_pics[2];
float Time;

void OnCreate()
{
	::OnCreate();
	bTickEnabled = true;
	Disable();
	selector_pics[0] = R_RegisterPic('m_skull1');
	selector_pics[1] = R_RegisterPic('m_skull2');
}

void Tick(float DeltaTime)
{
	Time += DeltaTime;
}

void OnDraw()
{
	// DRAW SKULL
	DrawPic(0, 0, selector_pics[ftoi(Time * 4.0) & 1]);
}

void SetOrigin(int X, int Y)
{
	SetPos(X - 32, Y - 5);
}

defaultproperties
{
	Width = 40;
	Height = 40;
}
