class Rocket : Projectile
	__scriptid__(127);

__states__
{
	S_ROCKET('MISL', 0 | FF_FULLBRIGHT, 'missiles/rocket.xml', 0, 1.0 / 35.0, S_ROCKET) { }
	S_EXPLODE1('MISL', 1 | FF_FULLBRIGHT, 8.0 / 35.0, S_EXPLODE2) { A_Explode(); }
	S_EXPLODE2('MISL', 2 | FF_FULLBRIGHT, 6.0 / 35.0, S_EXPLODE3) { }
	S_EXPLODE3('MISL', 3 | FF_FULLBRIGHT, 4.0 / 35.0, none) { }
}

defaultproperties
{
	Radius = 11.0;
	Height = 8.0;
	Speed = 700.0;
	MissileDamage = 20;
	bActivateImpact = true;
	IdleState = S_ROCKET;
	DeathState = S_EXPLODE1;
	SightSound = 'weapons/rocklf';
	DeathSound = 'weapons/rocklx';
	Effects = DoomDefs::EF_DL_MISSILE | DoomDefs::EF_ROCKET;
}
