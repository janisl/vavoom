class Rocket : Actor
	__scriptid__(127);

//==========================================================================
//
//	PreExplode
//
//==========================================================================

void PreExplode()
{
	RenderStyle = STYLE_Add;
	Alpha = 0.5;
}

states
{
Spawn:
	MISL A 1 Bright
	Loop
Death:
	MISL B 8 Bright A_Explode
	MISL C 6 Bright
	MISL D 4 Bright
	Stop
}

defaultproperties
{
	Radius = 11.0;
	Height = 8.0;
	Speed = 700.0;
	MissileDamage = 20;
	bMissile = true;
	bNoBlockmap = true;
	bNoGravity = true;
	bDropOff = true;
	bActivatePCross = true;
	bActivateImpact = true;
	bNoTeleport = true;
	bRandomise = true;
	bLeaveTrail = true;
	SightSound = 'weapons/rocklf';
	DeathSound = 'weapons/rocklx';
}
