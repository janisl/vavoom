class FloatingSkull:Decoration
	__mobjinfo__(42);

__states__
{
	S_FLOATSKULL('FSKU', 0 | FF_FULLBRIGHT, 'objects/fskulls.md2', 0, 6.0 / 35.0, S_FLOATSKULL2) { }
	S_FLOATSKULL2('FSKU', 1 | FF_FULLBRIGHT, 'objects/fskulls.md2', 1, 6.0 / 35.0, S_FLOATSKULL3) { }
	S_FLOATSKULL3('FSKU', 2 | FF_FULLBRIGHT, 'objects/fskulls.md2', 2, 6.0 / 35.0, S_FLOATSKULL) { }
}

defaultproperties
{
	Radius = 16.0;
	Height = 48.0;
	bSolid = true;
	IdleState = S_FLOATSKULL;
	bStaticLight = true;
	LightColour = RGB(255, 127, 27);
	LightOffset = vector(0.0, 0.0, 32.0);
}

