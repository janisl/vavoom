class MenuStaticAnim:MenuObject;

int Speed;
int NumFrames;
int StartFrame;
bool bBackwards;
int Frames[32];
name FrameNames[32];
float Time;

void InitWindow()
{
	int i;

	::InitWindow();

	bTickEnabled = true;
	Disable();
	NumFrames = 0;
	for (i = 0; i < 32; i++)
	{
		if (FrameNames[i])
		{
			Frames[NumFrames] = R_RegisterPic(FrameNames[i]);
			NumFrames++;
		}
	}
}

void Tick(float DeltaTime)
{
	Time += DeltaTime;
}

void DrawWindow()
{
	int frame = (ftoi(Time * itof(Speed)) + StartFrame) % NumFrames;
	if (bBackwards)
	{
		frame = NumFrames - frame - 1;
	}
	DrawIcon(0, 0, Frames[frame]);
}

