class MenuChoiceEnum:MenuChoice;

string Text;
bool bLeftAlign;

int Value;
int MaxValue;
string EnumNames[32];

delegate bool ValueChanging(Object Sender, int NewValue);

bool SetNewValue(int newValue)
{
	if (ValueChanging)
	{
		return ValueChanging(self, newValue);
	}
	return true;
}

void AddItem(string AValue)
{
	EnumNames[MaxValue] = AValue;
	MaxValue++;
}

void SetInitialValue(int AValue)
{
	Value = AValue;
	if (Value < 0)
		Value = 0;
	if (Value >= MaxValue)
		Value = MaxValue - 1;
}

void DrawWindow()
{
	int xx;

	T_SetFont(font_small);
	if (bLeftAlign)
	{
		T_SetAlign(hleft, vtop);
	}
	else
	{
		T_SetAlign(hright, vtop);
	}
	DrawText(0, 0, Text);

	if (bLeftAlign)
	{
		xx = T_TextWidth(Text) + 8;
	}
	else
	{
		xx = 10;
	}
	T_SetAlign(hleft, vtop);
	DrawText(xx, 0, EnumNames[Value]);
}

bool Key(int key)
{
	int newValue;

	switch (key)
	{
	case K_LEFTARROW:
		if (Value > 0)
			newValue = Value - 1;
		else
			newValue = MaxValue - 1;
		if (SetNewValue(newValue))
		{
			Value = newValue;
			LocalSound('menu/change');
		}
		return true;
	case K_RIGHTARROW:
	case K_ENTER:
	case K_PADENTER:
	case K_MOUSE1:
		if (Value < MaxValue - 1)
			newValue = Value + 1;
		else
			newValue = 0;
		if (SetNewValue(newValue))
		{
			Value = newValue;
			LocalSound('menu/change');
		}
		return true;
	}
	return false;
}

defaultproperties
{
	Height = 10;
}
