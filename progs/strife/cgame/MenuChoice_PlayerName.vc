class MenuChoice_PlayerName:MenuInputLine;

void InitWindow(void)
{
	::InitWindow();
	strcpy(ARR2STR(Value), GetCvarS("Name"));
}

void ValueChanged(void)
{
	::ValueChanged();
	SetCvarS("Name", ARR2STR(Value));
}

defaultproperties
{
	Text = "Name";
}

