class MenuChoice_Episode1 : MenuBigTextButton;

int PicHandle;
name EpisodeMap;
bool bNoSkillMenu;

void ActivateEvent()
{
	GetClGame().MenuStartMap = EpisodeMap;
	if (bNoSkillMenu)
	{
		GetClGame().NewGame(sk_medium);
	}
	else
	{
		GetClGame().PushMenuScreen(GetClGame().SpawnMenu(MenuScreenSkill));
	}
}

void OnDraw()
{
	if (PicHandle > 0)
	{
		DrawPic(0, 0, PicHandle);
	}
	else
	{
		::OnDraw();
	}
}

defaultproperties
{
	Text = "CITY OF THE DAMNED";
	EpisodeMap = 'e1m1';
}
