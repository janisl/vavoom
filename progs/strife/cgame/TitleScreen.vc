class TitleScreen : Window;

ClientGameBase ClGame;

// demo loop control
int demosequence;

float pagetime;
int page_pic;

//==========================================================================
//
//  AdvanceDemo
//
//  This cycles through the demo sequences.
//
//==========================================================================

void AdvanceDemo()
{
	demosequence++;
	demosequence %= 10;

	switch (demosequence)
	{
	case 0:
		pagetime = 12.0;
		page_pic = R_RegisterPic('titlepic');
		CmdBuf_AddText("music play d_logo");
		break;

	case 1:
		pagetime = 5.0;
		page_pic = R_RegisterPic('rgelogo');
		LocalSound('crusader/active');
		break;

	case 2:
		pagetime = 7.0;
		page_pic = R_RegisterPic('panel1');
		CmdBuf_AddText("music play d_intro");
		LocalSound('svox/pro1');
		break;

	case 3:
		pagetime = 9.0;
		page_pic = R_RegisterPic('panel2');
		LocalSound('svox/pro2');
		break;

	case 4:
		pagetime = 12.0;
		page_pic = R_RegisterPic('panel3');
		LocalSound('svox/pro3');
		break;

	case 5:
		pagetime = 11.0;
		page_pic = R_RegisterPic('panel4');
		LocalSound('svox/pro4');
		break;

	case 6:
		pagetime = 10.0;
		page_pic = R_RegisterPic('panel5');
		LocalSound('svox/pro5');
		break;

	case 7:
		pagetime = 16.0;
		page_pic = R_RegisterPic('panel6');
		LocalSound('svox/pro6');
		break;

	case 8:
		CmdBuf_AddText("PlayDemo demo1\n");
		break;

	case 9:
		pagetime = 6.0;
		page_pic = R_RegisterPic('credit');
		break;
	}
}

//==========================================================================
//
//  ForceTitle
//
//==========================================================================

void ForceTitle()
{
	pagetime = 11.0;
	page_pic = R_RegisterPic('titlepic');
}

//==========================================================================
//
//	VisibilityChanged
//
//==========================================================================

void VisibilityChanged(bool bNewVisibility)
{
	bTickEnabled = bNewVisibility;
}

//==========================================================================
//
//	Tick
//
//==========================================================================

void Tick(float DeltaTime)
{
	pagetime -= DeltaTime;
	if (demosequence == -1 || (!ClGame.MenuActive() && pagetime < 0.0))
	{
		AdvanceDemo();
	}
}

//==========================================================================
//
//  DrawWindow
//
//==========================================================================

void DrawWindow(GC gc)
{
	gc.DrawFullScreenPic(page_pic);
}

//==========================================================================
//
//  OnHostEndGame
//
//==========================================================================

void OnHostEndGame()
{
	if (demosequence != -1)
		AdvanceDemo();
	ForceTitle();
}

//==========================================================================
//
//  OnHostError
//
//==========================================================================

void OnHostError()
{
	demosequence = -1;
	ForceTitle();
}

//==========================================================================
//
//  StopDemoLoop
//
//==========================================================================

void StopDemoLoop()
{
	demosequence = -1;	// not in the demo loop now
}

defaultproperties
{
	bTickEnabled = true;
	Width = 320;
	Height = 200;
	demosequence = -1;	// -1 = don't play demos
}
