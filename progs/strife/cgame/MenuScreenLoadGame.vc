class MenuScreenLoadGame : MenuScreen;

void CreateChoices()
{
	MenuChoice_LoadSlot newChoice;
	int i;

	for (i = 0; i < 8; i++)
	{
		newChoice = MenuChoice_LoadSlot(NewChild(MenuChoice_LoadSlot));
		newChoice.SetPos(ChoicesStartX, ChoicesStartY + i * 18);
		newChoice.SlotNum = i;
		newChoice.Status = SV_GetSaveString(i, &newChoice.Text);
	}
}

defaultproperties
{
	ChoicesStartX = 80;
	ChoicesStartY = 40;
	SelectorType = MenuSelector_Spinner;
	Title = "LOAD GAME";
}
