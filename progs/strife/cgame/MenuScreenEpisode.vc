class MenuScreenEpisode : MenuScreen;

void CreateChoices()
{
	MenuChoice_Episode1	newChoice;
	int					currentY;
	int					i;
	EpisodeDef*			EDef;

	currentY = ChoicesStartY;
	for (i = 0; i < P_GetNumEpisodes(); i++)
	{
		EDef = P_GetEpisodeDef(i);
		newChoice = MenuChoice_Episode1(NewChild(MenuChoice_Episode1));
		newChoice.SetPos(ChoicesStartX, currentY);
		newChoice.EpisodeMap = EDef->Name;
		if (EDef->TeaserName && !WadLumpPresent(EDef->Name))
		{
			newChoice.EpisodeMap = EDef->TeaserName;
		}
		if (EDef->PicName)
		{
			newChoice.PicHandle = R_RegisterPic(EDef->PicName);
		}
		else if (EDef->bLookupText)
		{
			newChoice.Text = GetLangString(StrToName(EDef->Text));
		}
		else
		{
			newChoice.Text = EDef->Text;
		}
		newChoice.bNoSkillMenu = EDef->bNoSkillMenu;
		currentY += newChoice.Height;
	}
}

defaultproperties
{
	ChoicesStartX = 48;
	ChoicesStartY = 40;
	SelectorType = MenuSelector_Spinner;
	Title = "WHICH EPISODE?";
}
