	Radius = 2.0;
	Height = 4.0;
	Gravity = 0.125;
	bMissile = true;
	bNoBlockmap = true;
	bDropOff = true;
	bNoTeleport = true;
	bActivatePCross = true;
	bCannotPush = true;
	bNoSplash = true;
}
